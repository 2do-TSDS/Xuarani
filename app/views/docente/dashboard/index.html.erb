<h1 class="mb-3">Mis materias</h1>

<% if @materias_de_docente.blank? %>
  <div class="alert alert-warning">No tenés materias asignadas.</div>
<% else %>
  <div class="list-group">
    <% @materias_de_docente.each do |md| %>
      <% m  = md.materia
         d  = md.division
         c  = m&.curso
         cl = m&.ciclo_lectivo %>

      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <strong><%= m&.nombre %></strong>
          <small class="text-muted">
            — <%= [c&.nombre, d&.nombre].compact.join(" ") %>
            <% if cl&.año.present? %> · Ciclo <%= cl.año %><% end %>
          </small>
        </div>

        <div class="btn-group">
          <%= link_to "Ver curso/división",
              materia_division_path(md),
              class: "btn btn-outline-secondary btn-sm" %>

          <%= link_to "Tomar asistencia",
              new_asistencia_materia_path(materia_division_id: md.id),
              class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
