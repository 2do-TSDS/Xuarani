<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Año</th>
      <th>Inicio</th>
      <th>Final</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% ciclo_lectivos.each do |ciclo| %>
      <tr>
        <td><%= ciclo.id %></td>
        <td><%= ciclo.año %></td>
        <td><%= l(ciclo.inicio, format: :short) if ciclo.inicio.present? %></td>
        <td><%= l(ciclo.final, format: :short) if ciclo.final.present? %></td>
        <td class="text-end">
          <%= link_to "Ver", ciclo, class: "btn btn-sm btn-outline-secondary" %>
          <% if can?(:update, ciclo) %>
            <%= link_to "Editar", edit_ciclo_lectivo_path(ciclo), class: "btn btn-sm btn-outline-primary" %>
          <% end %>
          <% if can?(:destroy, ciclo) %>
            <%= link_to "Eliminar", ciclo, method: :delete, data: { confirm: "¿Seguro que deseas eliminar este ciclo lectivo?" }, class: "btn btn-sm btn-outline-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
