<%= form_with(model: materia_docente, local: true) do |form| %>
  <% if materia_docente.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= pluralize(materia_docente.errors.count, "error") %></strong> impiden guardar:
      <ul class="mb-0">
        <% materia_docente.errors.full_messages.each { |m| %><li><%= m %></li><% } %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :materia_division_id, 'Materia / División', class: 'form-label' %>
        <%= form.collection_select :materia_division_id, @materia_divisiones, :id, :display_name,
              { prompt: 'Seleccione…' }, class: 'form-select', required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :docente_id, 'Docente', class: 'form-label' %>
        <%= form.collection_select :docente_id, @docentes, :id, :display_name,
              { prompt: 'Seleccione…' }, class: 'form-select', required: true %>
      </div>

      <div class="form-check mb-3">
        <%= form.check_box :titular, class: 'form-check-input' %>
        <%= form.label :titular, 'Docente Titular', class: 'form-check-label' %>
      </div>

      <div>
        <%= form.submit 'Guardar', class: 'btn btn-info' %>
      </div>
    </div>
  </div>
<% end %>
