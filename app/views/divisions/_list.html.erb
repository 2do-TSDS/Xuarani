<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% divisions.each do |d| %>
      <tr>
        <td><%= d.id %></td>
        <td><%= d.try(:nombre) || d.try(:name) || d.try(:descripcion) %></td>
        <td class="text-end">
          <%= link_to "Ver", d, class: "btn btn-sm btn-outline-secondary" %>
          <% if can?(:update, d) %>
            <%= link_to "Editar", edit_division_path(d), class: "btn btn-sm btn-outline-primary" %>
          <% end %>
          <% if can?(:destroy, d) %>
            <%= link_to "Eliminar", d, method: :delete, data: { confirm: "Â¿Seguro?" }, class: "btn btn-sm btn-outline-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
