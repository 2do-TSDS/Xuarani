<div class="d-flex justify-content-between align-items-center bg-light rounded-3 p-3 mb-4 shadow-sm border">
  <h1 class="h3 fw-bold mb-0 <%= @user.new_record? ? 'text-primary' : 'text-warning' %>">
    <% if @user.new_record? %>
      <i class="bi bi-person-plus-fill me-2"></i>Nuevo Usuario
    <% else %>
      <i class="bi bi-pencil-square me-2"></i>Editar Usuario
    <% end %>
  </h1>

  <%= link_to users_path, class: "btn btn-outline-secondary d-flex align-items-center" do %>
    <i class="bi bi-arrow-left me-2"></i> Volver
  <% end %>
</div>
