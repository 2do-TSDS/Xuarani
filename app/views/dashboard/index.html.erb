<div class="container">
  <h1 class="mb-4 text-center">Panel Principal del Sistema</h1>

  <div class="row g-4">

    <!-- Gestión de usuarios -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body text-center">
          <h5 class="card-title"><i class="bi bi-people-fill me-2"></i>Gestión de Usuarios</h5>
          <p class="card-text text-muted">Administración integral de usuarios, perfiles y roles.</p>
          <div class="d-grid gap-2">
            <%= link_to "Ir al Panel de Usuarios", users_path, class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Organización académica -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body text-center">
          <h5 class="card-title"><i class="bi bi-building me-2"></i>Organización Académica</h5>
          <p class="card-text text-muted">Panel integral de turnos, cursos, divisiones y ciclos lectivos.</p>
          <div class="d-grid gap-2">
            <%= link_to "Ir al Panel Integral", organizacion_path, class: "btn btn-success btn-lg" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Materias -->
    <div class="col-md-4">
      <div class="card shadow-sm h-100">
        <div class="card-body text-center">
          <h5 class="card-title"><i class="bi bi-journal-text me-2"></i>Materias</h5>
          <p class="card-text text-muted">Panel integral de materias, divisiones, docentes y alumnos.</p>
          <div class="d-grid gap-2">
            <%= link_to "Ir al Panel de Materias", materias_panel_path, class: "btn btn-warning btn-lg text-dark" %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
