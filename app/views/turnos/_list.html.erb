<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% turnos.each do |t| %>
      <tr>
        <td><%= t.id %></td>
        <td><%= t.try(:nombre) || t.try(:name) || t.try(:titulo) %></td>
        <td class="text-end">
          <%= link_to "Ver", t, class: "btn btn-sm btn-outline-secondary" %>
          <% if can?(:update, t) %>
            <%= link_to "Editar", edit_turno_path(t), class: "btn btn-sm btn-outline-primary" %>
          <% end %>
          <% if can?(:destroy, t) %>
            <%= link_to "Eliminar", t, method: :delete, data: { confirm: "Â¿Seguro?" }, class: "btn btn-sm btn-outline-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
