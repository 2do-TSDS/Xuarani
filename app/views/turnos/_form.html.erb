<%= form_with(model: turno, local: true) do |form| %>
  <% if turno.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= pluralize(turno.errors.count, "error") %></strong> impiden guardar:
      <ul class="mb-0">
        <% turno.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :nombre, 'Nombre', class: 'form-label' %>
        <%= form.text_field :nombre,
              class: ['form-control', (turno.errors[:nombre].any? ? 'is-invalid' : nil)].compact.join(' '),
              required: true, autofocus: true %>
        <% if turno.errors[:nombre].any? %>
          <div class="invalid-feedback d-block"><%= turno.errors[:nombre].first %></div>
        <% end %>
        <div class="form-text">Ej.: Mañana, Tarde, Noche…</div>
      </div>

      <div>
        <%= form.submit 'Guardar', class: 'btn btn-primary' %>
        <%= link_to 'Cancelar', turnos_path, class: 'btn btn-outline-secondary ms-2' %>
      </div>
    </div>
  </div>
<% end %>
