<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% orientacions.each do |o| %>
      <tr>
        <td><%= o.id %></td>
        <td><%= o.try(:nombre) || o.try(:name) || o.try(:titulo) %></td>
        <td class="text-end">
          <%= link_to "Ver", o, class: "btn btn-sm btn-outline-secondary" %>
          <% if can?(:update, o) %>
            <%= link_to "Editar", edit_orientacion_path(o), class: "btn btn-sm btn-outline-primary" %>
          <% end %>
          <% if can?(:destroy, o) %>
            <%= link_to "Eliminar", o, method: :delete, data: { confirm: "Â¿Seguro?" }, class: "btn btn-sm btn-outline-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
