<h1>Perfiles</h1>

<%= render 'shared/index_table',
  headers: ['Nombres', 'Apellidos', 'DNI', 'Fecha de nacimiento', 'Dirección', 'Teléfono', 'Usuario'],
  collection: @perfils,
  columns: [
    ->(r) { r.nombres },
    ->(r) { r.apellidos },
    ->(r) { r.dni },
    ->(r) { r.fecha_nacimiento },
    ->(r) { r.direccion },
    ->(r) { r.telefono },
    ->(r) { r.user&.email }
  ],
  new_path: new_perfil_path,
  new_label: 'Perfil'
%>