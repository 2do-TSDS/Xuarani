<%# --- quita container y padding del <main> SOLO en esta página --- %>
<% content_for :layout_container_class, 'container-fluid p-0' %>

<div class="login-wrapper d-flex">
  <div class="login-overlay d-flex justify-content-center align-items-center w-100">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 900px; width: 100%;">
      <div class="row g-0">
        <!-- Imagen lateral -->
        <div class="col-md-6 d-none d-md-block">
          <%= image_tag "escuela2.jpg",
                        alt: "Escuela",
                        class: "img-fluid h-100 rounded-start",
                        style: "object-fit: cover;" %>
        </div>

        <!-- Formulario -->
        <div class="col-md-6">
          <div class="card-body p-4">
            <h4 class="mb-4 fw-bold text-center">Ingresar</h4>

            <%= form_with(scope: :user, url: session_path(:user), local: true) do |f| %>
              <div class="mb-3">
                <%= f.label :email, "Usuario", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Correo electrónico" %>
                </div>
              </div>

              <div class="mb-3">
                <%= f.label :password, "Clave", class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Contraseña" %>
                </div>
              </div>

              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Recordarme", class: "form-check-label" %>
              </div>

              <div class="d-grid gap-2">
                <%= f.submit "Ingresar", class: "btn btn-primary btn-lg" %>
              </div>

              <div class="text-center mt-3">
                <%= link_to "¿Olvidaste tu contraseña?", new_password_path(:user), class: "small text-decoration-none" %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
