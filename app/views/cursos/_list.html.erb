<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% cursos.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.try(:nombre) || c.try(:name) || c.try(:titulo) %></td>
        <td class="text-end">
          <%= link_to "Ver", c, class: "btn btn-sm btn-outline-secondary" %>
          <% if can?(:update, c) %>
            <%= link_to "Editar", edit_curso_path(c), class: "btn btn-sm btn-outline-primary" %>
          <% end %>
          <% if can?(:destroy, c) %>
            <%= link_to "Eliminar", c, method: :delete, data: { confirm: "Â¿Seguro?" }, class: "btn btn-sm btn-outline-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
