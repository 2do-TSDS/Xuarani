<%# locals:
#  headers:, collection:, columns:, new_path: (opcional), new_label: (opcional), actions: (opcional)
#%>

<div class="table-responsive">
  <table class="table table-striped table-hover table-sm align-middle mb-2">
    <thead class="table-light">
      <tr>
        <% headers.each do |h| %>
          <th><%= h %></th>
        <% end %>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% collection.each do |record| %>
        <tr>
          <% columns.each do |col| %>
            <td><%= col.call(record) %></td>
          <% end %>
          <td class="text-end">
            <% if local_assigns[:actions] %>
              <%= actions.call(record) %>
            <% else %>
              <%= link_to 'Ver', record, class: 'btn btn-link btn-sm px-1' %>
              <%= link_to 'Editar', url_for([:edit, record]), class: 'btn btn-link btn-sm px-1' %>
              <%= link_to 'Borrar', record,
                    method: :delete,
                    data: { turbo_confirm: 'Â¿Seguro?' },
                    class: 'btn btn-link btn-sm text-danger px-1' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if local_assigns[:new_path].present? %>
  <div class="mt-2">
    <%= link_to "Nuevo #{new_label}", new_path, class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>
