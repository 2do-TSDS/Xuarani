<%= form_with(model: materia_alumno, local: true) do |form| %>
  <% if materia_alumno.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= pluralize(materia_alumno.errors.count, "error") %></strong> impiden guardar:
      <ul class="mb-0">
        <% materia_alumno.errors.full_messages.each { |m| %><li><%= m %></li><% } %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :materia_division_id, 'Materia / División', class: 'form-label' %>
        <%= form.collection_select :materia_division_id, @materia_divisiones, :id, :display_name,
              { prompt: 'Seleccione…' }, class: 'form-select', required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :alumno_id, 'Alumno', class: 'form-label' %>
        <%= form.collection_select :alumno_id, @alumnos, :id, :display_name,
              { prompt: 'Seleccione…' }, class: 'form-select', required: true %>
      </div>

      <div>
        <%= form.submit 'Guardar', class: 'btn btn-warning' %>
      </div>
    </div>
  </div>
<% end %>
